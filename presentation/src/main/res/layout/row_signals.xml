<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"

  >
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="5dp"
    android:paddingEnd="10dp"
    android:background="@drawable/custom_bg"

    android:minHeight="60dp"
    android:orientation="horizontal"
    android:weightSum="10">


    <ImageView
      android:id="@+id/iv_tick"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:paddingStart="5dp"
      android:paddingEnd="5dp"
      android:gravity="center"
      android:src="@drawable/ic_tick_blue"
      android:visibility="visible"/>

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="2"
      android:orientation="vertical"
      android:weightSum="2"
      >


      <TextView
        android:id="@+id/tv_signal_pair"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="3dp"
        android:gravity="center_vertical"
        android:textColor="@color/color_textview_personal_positions_pair"
        android:textSize="12sp"
        />
      <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="3dp"
        android:gravity="center_vertical"
        android:textColor="@color/color_textview_profit_grey"
        android:textSize="11sp"
        />

    </LinearLayout>

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="5"
      android:orientation="horizontal"
      android:weightSum="10"
      >
      <TextView
        android:id="@+id/tv_signal_buy_sell"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:textColor="@color/color_textview_personal_positions_buy"
        android:textSize="12sp"

        />

      <TextView
        android:id="@+id/tv_signal_opening_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:textColor="@color/color_textview_opening_price"
        android:textSize="12sp"

        />
      <TextView
        android:id="@+id/tv_signal_status"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:textColor="@color/color_textview_signal_status"
        android:textSize="12sp"/>

    </LinearLayout>
    <ImageView
      android:id="@+id/signal_status"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center"
      app:srcCompat="@drawable/green_circle"
      />

    <ImageView
      android:id="@+id/signal_comment"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center"
      />


  </LinearLayout>

  <LinearLayout
    android:id="@+id/line_separator_signal"
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="@color/color_separator_line"
    android:orientation="vertical">
  </LinearLayout>

</LinearLayout>